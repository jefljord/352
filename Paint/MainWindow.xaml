<Window x:Name="KnockoffPaint" x:Class="Paint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paint"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FFD7F17D">
    <Grid>
        <InkCanvas x:Name="Inkcanvas" HorizontalAlignment="Left" Height="310" Margin="164,54,0,0" VerticalAlignment="Top" Width="477" Grid.IsSharedSizeScope="True"/>
        <Button x:Name="Clear" Content="Clear" HorizontalAlignment="Left" Margin="23,22,0,0" VerticalAlignment="Top" Width="75" Click="Clear_Click"/>
        <Button Content="Change Color" HorizontalAlignment="Left" Margin="23,54,0,0" VerticalAlignment="Top" Width="75" Click="Color_Click"/>
        <Button Content="Change Size" HorizontalAlignment="Left" Margin="23,90,0,0" VerticalAlignment="Top" Width="75" Click="Size_Click"/>
        <Button Content="Reset" HorizontalAlignment="Left" Margin="23,126,0,0" VerticalAlignment="Top" Width="75" Click="Reset_Click"/>

    </Grid>
</Window>
